generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String  @id @default(uuid())
  name          String
  email         String  @unique
  avatar        String?
  password_hash String?

  provider      String?
  provider_id   String? @unique

  created_at DateTime @default(now())
  updated_at DateTime @default(now())
}
